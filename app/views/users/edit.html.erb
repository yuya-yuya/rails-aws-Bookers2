<%= form_with model: @user, url: user_path(@user.id), local: true do |f| %>
  <h2>User info</h2>
  <p>
    Name<br>  
    <%= f.text_field :name %>
  </p>
  <p>
    Image<br>
    <%= f.attachment_field :profile_image %>
  </p>
  <p>
    Introduction<br>
    <%= f.text_area :introduction %><br>
  </p>
    <%= f.submit 'Update User' %>
<% end %>
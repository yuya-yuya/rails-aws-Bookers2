<%= notice %>
<p id="notice"></p>
<% if @user.id == @users.id %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user ,book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <% @books.each do |book| %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>title</th>
            <th>option</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, size:"40x40", format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td><%= link_to book.title, user_path(book.id)%></td>
            <td><%= book.body%></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>
<% else %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @users ,book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <% @books1.each do |book| %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>title</th>
            <th>option</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag @user, :profile_image, size:"40x40", format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id)%></td>
            <td><%= book.body%></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>
<% end %>
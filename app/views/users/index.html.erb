<% notice %>
<div class="container">
  <div class="row">
     <div class="col-md-3">
      <%= render 'users/list', user: current_user ,book: @book %>
     </div>
     <div class="col-md-8 offset-md-1">
       <h2>Users</h2>
        <% @users.each do |user| %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, size:"40x40", format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td><%= user.name%></td>
              <td><%= link_to"Show" ,user_path(user.id)%></td>
            </tr>
          </tbody>
        </table>
        <% end %>
     </div>
  </div>
</div>



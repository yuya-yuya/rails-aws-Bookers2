
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user ,book: @book %>
    </div> 
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-striped">
          <tr>
            <td>
              <%= link_to user_path(current_user) do%>
               <!--<%= attachment_image_tag @user, :profile_image, size:"100x100", format: 'jpeg', fallback: "no_image.jpg" %>-->
               <%= @user.name%>
              <% end %>
            </td>
            <td><%= link_to @books.title, book_path(current_user) %></td>
            <td><%= @books.body%></td>
            <% if @user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@books) %></td>
              <td><%= link_to "Destroy", book_path(@books), method: :delete %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
 
 